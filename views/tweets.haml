!!! html
%html
  %head
    %link{ :rel => 'stylesheet', :href => '/bootstrap/css/bootstrap.css' }
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{ :href => '#' }
            food_poison.us
          %ul.nav.pull-right
            %li.divider-vertical
              %li
                %a{ :href => '/about' } 
                  About
            %li.divider-vertical
    .container{ :style => 'padding-top: 60px;' }
      .row
        .span12
          %h1 Food Poisoning Tweets
          %hr

      - @tweets.each do |tweet|
        .row
          .span8.offset2.well
            .row
              .span1
                %img{ :src => "#{tweet['profile_image_url']}" }
              .span7
                %p.muted.pull-right 
                  = tweet['created_at']
                %h3 
                  = tweet['from_user_name']
                  %small 
                    @#{tweet['from_user']}
                %blockquote
                  %p
                    = tweet['text']

